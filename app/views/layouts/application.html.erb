<!DOCTYPE html>
<html>
<head>
  <title>QueueApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<header class="sixteen columns">
<% if current_user %>
  <h1 class="six columns alpha">Queue</h1>
  <nav class="ten columns omega">
    <ul>
      <li>Welcome, <%= current_user.first_name %></li>
      <li><%= link_to 'Log Out', logout_path %></li>
      <li><%= link_to 'Edit Profile', edit_user_path(current_user) %></li>
      <li><%= link_to 'Home', users_path %></li>
    </ul>
  </nav>
</header>

<div class="container">
  <div>
    <%= link_to 'My Movie Recs', "/users/#{current_user.id}/recommendations/movie/received" %> |
    <%= link_to 'Completed Movie Recs', "/users/#{current_user.id}/recommendations/movie/completed" %>
  </div>
  <div>
    <%= link_to 'My Book Recs', "/users/#{current_user.id}/recommendations/book/received" %> |
    <%= link_to 'Completed Book Recs', "/users/#{current_user.id}/recommendations/book/completed" %>
  </div>
  <div>
    <%= link_to 'Sent Book Recs', "/users/#{current_user.id}/recommendations/book/sent" %> |
    <%= link_to 'Sent Movie Recs', "/users/#{current_user.id}/recommendations/movie/sent" %>
  </div>
<% else %>
  <h1>Queue</h1>
<% end %>

<% flash.each do |name, msg| %>
  <%= content_tag :div, msg, class: name %>
<% end %>

</div> <!--End of container -->
<%= yield %>


</body>
</html>
